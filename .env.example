# ============================================
# APPLICATION SETTINGS
# ============================================
APP_NAME="POS Studio"
APP_ENV=production
APP_KEY=
APP_DEBUG=false
APP_URL=https://your-domain.com

# Security: Always set to false in production
APP_DEBUG=false

# ============================================
# DATABASE CONFIGURATION
# ============================================
DB_CONNECTION=mysql
DB_HOST=127.0.0.1
DB_PORT=3306
DB_DATABASE=studio_pos
DB_USERNAME=studio_pos_user
DB_PASSWORD=your_secure_password_here

# ============================================
# SESSION & CACHE CONFIGURATION
# ============================================
SESSION_DRIVER=database
SESSION_LIFETIME=120
SESSION_ENCRYPT=true
SESSION_SECURE_COOKIE=true
SESSION_HTTP_ONLY=true
SESSION_SAME_SITE=lax

CACHE_DRIVER=file
# For production, consider using redis or memcached
# CACHE_DRIVER=redis

# ============================================
# APPLICATION SECURITY
# ============================================
# Force HTTPS in production
FORCE_HTTPS=true

# Rate limiting
RATE_LIMIT_ENABLED=true
RATE_LIMIT_MAX_ATTEMPTS=5
RATE_LIMIT_DECAY_MINUTES=1

# Security headers
SECURITY_HEADERS_ENABLED=true

# ============================================
# LOGGING CONFIGURATION
# ============================================
LOG_CHANNEL=stack
LOG_LEVEL=warning
LOG_DEPRECATIONS_CHANNEL=null

# For production, use daily logs
LOG_CHANNEL=daily
LOG_DAILY=14

# ============================================
# APPLICATION LOCALIZATION
# ============================================
APP_LOCALE=id
APP_FALLBACK_LOCALE=en
APP_TIMEZONE=Asia/Jakarta

# ============================================
# MAIL CONFIGURATION
# ============================================
MAIL_MAILER=smtp
MAIL_HOST=smtp.gmail.com
MAIL_PORT=587
MAIL_USERNAME=your-email@gmail.com
MAIL_PASSWORD=your-app-password
MAIL_ENCRYPTION=tls
MAIL_FROM_ADDRESS="noreply@your-domain.com"
MAIL_FROM_NAME="${APP_NAME}"

# ============================================
# FILE SYSTEM
# ============================================
FILESYSTEM_DISK=local
# For production with S3:
# FILESYSTEM_DISK=s3

# ============================================
# QUEUE CONFIGURATION
# ============================================
QUEUE_CONNECTION=database

# ============================================
# CUSTOM APPLICATION SETTINGS
# ============================================
# Invoice prefix
INVOICE_PREFIX=INV

# Default PIN for new users (should be changed after first login)
DEFAULT_USER_PIN=123456

# Application version
APP_VERSION=1.0.0

# ============================================
# DEVELOPMENT SETTINGS (Comment out in production)
# ============================================
# APP_ENV=local
# APP_DEBUG=true
# APP_URL=http://localhost:8000
# DB_DATABASE=studio_pos_dev
# DB_USERNAME=root
# DB_PASSWORD=
# SESSION_SECURE_COOKIE=false
# FORCE_HTTPS=false

# ============================================
# VITE FRONTEND BUILD
# ============================================
VITE_APP_NAME="${APP_NAME}"
VITE_APP_URL="${APP_URL}"
